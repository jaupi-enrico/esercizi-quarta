<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.abbonamento.abbonamento.HelloController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- RadioButton per il tipo di abbonamento -->
    <RadioButton fx:id="mensile" text="Mensile"/>
    <RadioButton fx:id="semestrale" text="Semestrale"/>
    <RadioButton fx:id="annuale" text="Annuale"/>

    <!-- DatePicker per la data di inizio -->
    <DatePicker fx:id="datePicker"/>

    <!-- Bottone per calcolare la data di fine -->
    <Button text="Calcola Data Fine" onAction="#onCalcolaButtonClick"/>

    <!-- Label per mostrare la data di fine -->
    <Label fx:id="welcomeText"/>
</VBox>
